{
  "name": "@pct-org/getting-started",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/pct-org/getting-started.git"
  },
  "license": "MIT",
  "scripts": {
    "build:apis": "yarn build:scraper && yarn build:graphql",
    "build:graphql": "cd apis/graphql-api && yarn && cd ../../",
    "build:scraper": "cd apis/scraper && yarn && cd ../../",
    "commitlint": "commitlint",
    "delete": "pm2 delete ecosystem.config.js",
    "monit": "pm2 monit",
    "pull": "git submodule foreach yarn",
    "postpull": "git pull --recurse-submodules",
    "setup": "pm2 install pm2-logrotate && yarn build:apis",
    "start": "pm2 start ecosystem.config.js",
    "start:dev": "",
    "stop": "pm2 stop ecosystem.config.js",
    "update:submodules": "git submodule foreach git pull origin master",
    "postupdate:submodules": "git submodule foreach yarn"
  },
  "dependencies": {
    "pm2": "^4.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "husky": "^3.0.5"
  }
}
